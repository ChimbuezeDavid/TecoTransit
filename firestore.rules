
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Bookings:
    // - Anyone can create a booking request.
    // - Only authenticated users (admins) can read, update, or delete bookings.
    match /bookings/{bookingId} {
      allow read, update, delete: if request.auth != null;
      allow create: if request.auth == null;
    }

    // Prices:
    // - Anyone can read the price list for the booking form.
    // - Only authenticated users (admins) can manage prices.
    match /prices/{priceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Alerts:
    // - Anyone can read the current alert.
    // - Only authenticated users (admins) can write/update alerts.
    match /alerts/{alertId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
  }
}
