rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This function is no longer used for broad access, but can be kept for future,
    // more specific admin-only rules (e.g., based on custom claims).
    function isAdmin() {
      // In a production app, this should check for a custom claim: `request.auth.token.admin == true`.
      // For now, this is kept simple.
      return request.auth != null;
    }

    // Bookings are managed via server-side actions. Client-side access is disallowed for security.
    match /bookings/{bookingId} {
      allow read, write: if false; 
    }

    // Trips are managed entirely by the backend. Client-side access is disallowed.
    match /trips/{tripId} {
      allow read, write: if false;
    }

    // Pricing can be read by anyone (for the booking form) but only written by admins.
    match /prices/{priceId} {
      allow read: if true;
      allow write: if request.auth != null; // Admin page updates prices directly
    }
    
    // Reservations are currently not used, but keeping rules for safety.
    match /reservations/{reservationId} {
        allow create: if true; // Allow client to create temp reservation
        allow read, update, delete: if false;
    }

    // Settings are managed by admins on the settings page.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Feedback can be created by anyone, but only read/deleted by admins.
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read, delete: if request.auth != null;
      allow update: if false;
    }

    // User data is internal to the admin system, not for client access.
    match /users/{userId} {
      allow read, write: if false;
    }
  }
}
