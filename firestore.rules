
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to create a booking, but only admins to manage them.
    // Allow anyone with the ID to read a single booking for confirmation.
    match /bookings/{bookingId} {
      allow read: if resource.data.id == bookingId || request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;

      // Validation Rules on create
      allow create: if request.resource.data.name is string &&
                      request.resource.data.name.size() > 1 &&
                      request.resource.data.email is string &&
                      request.resource.data.phone is string &&
                      request.resource.data.pickup is string &&
                      request.resource.data.destination is string &&
                      request.resource.data.intendedDate is string &&
                      request.resource.data.alternativeDate is string &&
                      // Ensure dates are in YYYY-MM-DD format and alternative is after intended
                      request.resource.data.intendedDate.matches('^\\d{4}-\\d{2}-\\d{2}$') &&
                      request.resource.data.alternativeDate.matches('^\\d{4}-\\d{2}-\\d{2}$') &&
                      request.resource.data.alternativeDate > request.resource.data.intendedDate &&
                      request.resource.data.vehicleType is string &&
                      request.resource.data.luggageCount is number &&
                      (
                        (request.resource.data.vehicleType == '4-Seater Sienna' && request.resource.data.luggageCount <= 4) ||
                        (request.resource.data.vehicleType == '5-Seater Sienna' && request.resource.data.luggageCount <= 2) ||
                        (request.resource.data.vehicleType == '7-Seater Bus' && request.resource.data.luggageCount <= 2)
                      ) &&
                      request.resource.data.totalFare is number;
    }

    // Allow admins to list all bookings
    match /bookings/{bookingId=**} {
        allow list: if request.auth != null;
    }

    // Allow only authenticated admins to manage prices.
    match /prices/{priceId} {
      allow read, write, delete: if request.auth != null;
    }
  }
}
