rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This function allows access for our authenticated server-side functions.
    // It is used to gate write access to collections managed by the backend.
    function isAdmin() {
      // In this app's context, 'isAdmin' means it's a request from our trusted server,
      // which is authenticated. We are not checking for specific user claims here.
      return request.auth != null;
    }

    // Bookings can be read or written by our server-side logic (isAdmin).
    match /bookings/{bookingId} {
      allow read, write: if isAdmin();
    }

    // Trips can be read or written by our server-side logic (isAdmin).
    match /trips/{tripId} {
      allow read, write: if isAdmin();
    }

    // Pricing can be read by anyone (for the booking form) but only written by admins.
    match /prices/{priceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reservations are currently not used, but keeping rules for safety.
    match /reservations/{reservationId} {
        allow create: if true; // Allow client to create temp reservation
        allow read, update, delete: if isAdmin();
    }

    // Settings can be read by anyone but only written by admins.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Feedback can be created by anyone, but only managed by admins.
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // User data is admin-only.
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
