
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // In a real app, this should be a custom claim, but for now we check for any authenticated user.
      return request.auth != null;
    }

    // Admins can read/write all booking and pricing data
    match /bookings/{bookingId} {
      allow read, write: if isAdmin();
    }

    match /prices/{priceId} {
      allow read, write: if isAdmin();
    }
    
    // Reservations can be created by anyone, but only managed by admins (or server logic)
    match /reservations/{reservationId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }

    // Settings can be read by anyone but only written by admins.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Feedback can be created by anyone, but only managed by admins.
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // User and token data is admin-only.
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    
    match /fcmTokens/{token} {
        allow read, write: if isAdmin();
    }
  }
}
