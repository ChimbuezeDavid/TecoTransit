
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // This function allows access for any authenticated user, which includes
    // both logged-in admins on the client-side and our authenticated
    // server-side functions. This is the key to allowing our backend
    // logic to manage trips and bookings.
    function isAdmin() {
      return request.auth != null;
    }

    // Bookings can be read or written by our server-side logic (isAdmin).
    match /bookings/{bookingId} {
      allow read, write: if isAdmin();
    }

    // Trips can be read or written by our server-side logic (isAdmin).
    match /trips/{tripId} {
      allow read, write: if isAdmin();
    }

    // Pricing can be read by anyone but only written by admins.
    match /prices/{priceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reservations are currently not used in the primary flow, but keeping rules for safety.
    match /reservations/{reservationId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }

    // Settings can be read by anyone but only written by admins.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Feedback can be created by anyone, but only managed by admins.
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // User and token data is admin-only.
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    
    match /fcmTokens/{token} {
        allow read, write: if isAdmin();
    }
  }
}
